{% extends 'layout.html.twig' %}

{% page_setup {
    'title': 'Inicio'
} %}

{% block content %}
    <div class="app-card shadow-sm mb-4 border-left-decoration">
        <div class="inner">
            <div class="app-card-body p-4">
                <div class="row gx-5 gy-3">
                    <h2>¡Hola!</h2>
                    <p>Toolbox te permite usar una serie de herramientas para hacer más cómodo tu día a día.</p>
                </div>
            </div>
        </div>
    </div>
    <hr>
    {% set menu = get_menu() %}
    <div class="row g-4 mb-4">
        <h4>Tus herramientas</h4>
        {% for item in menu %}
            {% if item.title != 'Inicio' %}
                <div class="col-12 col-lg-4">
                    <div class="app-card app-card-basic d-flex flex-column align-items-start shadow-sm">
                        <div class="app-card-header p-3 border-bottom-0">
                            <div class="row align-items-center gx-3">
                                <div class="col-auto">
                                    <div class="app-icon-holder">{{ source(item.icon) }}</div>
                                </div>
                                <div class="col-auto">
                                    <h3 class="app-card-title">{{ item.title }}</h3>
                                </div>
                            </div>
                        </div>
                        <div class="app-card-body px-4 pb-2">
                            <div class="intro">{{ item.description }}</div>
                        </div>
                        <a class="app-card-link-mask" href="{{ path(item.routeName) }}"></a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
