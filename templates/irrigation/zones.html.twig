{% extends 'layout.html.twig' %}

{% page_setup {
    'title': 'Recomendaciones de Riego',
    'header': 'Recomendaciones de Riego',
    'subheader': 'Datos sobre las recomendaciones de riego en platanera en La Palma',
    'breadcrumbs': [
        {
            'name': 'Recomendaciones de Riego',
            'main': true
        }
    ],
} %}

{% block content %}
    <div class="row g-4">
        {% for zone in zones %}
            <div class="col-6 col-md-4 col-xl-3 col-xxl-2">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card-body p-3 p-lg-4">
                        <h5 class="mb-2">{{ zone.name }}</h5>
                        <div class="stats-meta">
                            <p class="mb-0 fw-bold">Última actualización:</p>
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <span class="text-success">Fecha de comienzo:</span>
                                    {{ zone.recentStartDate|date('d/m/Y') }}
                                </li>
                                <li>
                                    <span class="text-success">Fecha de fin:</span>
                                    {{ zone.recentEndDate|date('d/m/Y') }}
                                </li>
                            </ul>
                        </div>
                        <a class="app-card-link-mask"
                           href="{{ path('irrigation_zone', {'zoneId': zone.id}) }}"></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
